---
import Badge from '../components/Badge.astro';
import SocialNetwork from '../components/SocialNetwork.astro'
import GithubIcon from '../icons/Github.astro';
const {title,description,img,link,github,tags}= Astro.props
---

<div class="max-w-sm bg-white  rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <a href="#">
        <img class="rounded-t-lg" src={img} alt=`screen del proyecto ${img}` />
    </a>
    <div class="p-5">
        <a href="#">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-[#8F00FF] dark:text-sky-400">{title}</h5>
        </a>
        <p class="mb-3 font-normal text-gray-900 dark:text-gray-400">{description}</p>
        <ul class="flex gap-2 py-2">
            {tags.map((tag)=>(
                <Badge>{tag}</Badge>
            ))}
        </ul>

        <div class="flex gap-2">
            <a href={link} class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-[#8F00FF] rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                Read more
                 <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                </svg>
            </a>
            <SocialNetwork  href="https://github.com/Mauricio333bit"><GithubIcon class="text-black dark:text-white" ></SocialNetwork>
        </div>
        
    </div>
</div>
